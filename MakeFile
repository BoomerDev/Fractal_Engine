OBJS = src/*.cpp

CC = g++

COMPILER_FLAGS = -w

#LINKER_FLAGS specifies the libraries we're linking against
LINKER_FLAGS = -lsfml-graphics -lsfml-system -lsfml-window -lsfml-network -lsfml-audio -lglfw3 -lglut -lGL -lGLU -lGLEW -ldl -lm -lpthread -pthread -lSDL2 -lopengl32 -lglu32 -lassimp-dev -lassimp-utils -libxmu-dev -libxi-dev

OBJ_NAME = build/Fractal

all : $(OBJS)
	$(CC) $(OBJS) $(COMPILER_FLAGS) $(LINKER_FLAGS) -o $(OBJ_NAME)
